<Window x:Class="ATM.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM"
        mc:Ignorable="d"
        Title="Privat47" Height="150" Width="200">
    <Grid Background="LightGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="Ask" Grid.Row="0" Content="" HorizontalContentAlignment="Center"  VerticalAlignment="Top"></Label>
        <TextBox x:Name="Answer" Grid.Row="1" Text="" Width="100" Height="30" VerticalAlignment="Bottom"></TextBox>
        <Button Grid.Row="2" Content="OK"  Click="Button_Click"></Button>
    </Grid>
</Window>
